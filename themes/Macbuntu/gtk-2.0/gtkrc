  base[PRELIGHT]   		= "#ffffff" 
  base[SELECTED]		= "#3670bd" 
  text[ACTIVE]			= "#ffffff"

  GtkTreeView::odd_row_color 	= "#ffffff"  
  GtkTreeView::even_row_color 	= "#d4dde5"

    engine "clearlooks" 
    {
	style             	= GUMMY
    }
}

